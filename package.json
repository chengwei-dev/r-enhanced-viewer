{
  "name": "r-enhanced-viewer",
  "displayName": "R Enhanced Viewer (REViewer)",
  "description": "Enhanced R data frame viewer for statistical programmers. Features quick filtering, multi-column sorting, frequency tables (F), and summary statistics (M).",
  "version": "0.1.5",
  "publisher": "ChengweiLi",
  "license": "MIT",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/chengwei-dev/r-enhanced-viewer"
  },
  "bugs": {
    "url": "https://github.com/chengwei-dev/r-enhanced-viewer/issues"
  },
  "homepage": "https://github.com/chengwei-dev/r-enhanced-viewer#readme",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Data Science",
    "Visualization",
    "Other"
  ],
  "keywords": [
    "R",
    "data frame",
    "statistics",
    "pharmaceutical",
    "SDTM",
    "ADaM",
    "clinical data",
    "data viewer",
    "table viewer"
  ],
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "reviewer.viewDataFrame",
        "title": "View Data Frame",
        "category": "REViewer"
      },
      {
        "command": "reviewer.refreshView",
        "title": "Refresh Data View",
        "category": "REViewer"
      },
      {
        "command": "reviewer.showServerInfo",
        "title": "Show Server Info & Get R Code",
        "category": "REViewer"
      },
      {
        "command": "reviewer.showConnectionHelp",
        "title": "How to Connect R",
        "category": "REViewer"
      }
    ],
    "configuration": {
      "title": "R Enhanced Viewer",
      "properties": {
        "reviewer.viewer.maxRowsInitialLoad": {
          "type": "number",
          "default": 10000,
          "description": "Maximum number of rows to load initially"
        },
        "reviewer.viewer.theme": {
          "type": "string",
          "enum": ["auto", "light", "dark"],
          "default": "auto",
          "description": "Theme for the data viewer"
        },
        "reviewer.modules.filter.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable filter module"
        },
        "reviewer.modules.statistics.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable statistics module"
        },
        "reviewer.modules.columnManager.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable column manager module"
        },
        "reviewer.r.timeout": {
          "type": "number",
          "default": 30000,
          "description": "Timeout for R commands in milliseconds"
        },
        "reviewer.server.port": {
          "type": "number",
          "default": 8765,
          "description": "Port for the REViewer HTTP server (used by REView() function in R)"
        },
        "reviewer.dev.useMockData": {
          "type": "boolean",
          "default": false,
          "description": "Use mock data for development/testing (normally disabled)"
        }
      }
    },
    "menus": {
      "editor/context": [
        {
          "command": "reviewer.viewDataFrame",
          "when": "editorLangId == r",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "npm run build:extension && npm run build:webview",
    "build:extension": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
    "build:webview": "vite build",
    "watch": "concurrently \"npm run watch:extension\" \"npm run watch:webview\"",
    "watch:extension": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --watch",
    "watch:webview": "vite build --watch",
    "lint": "eslint src --ext ts,tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "test": "vitest run",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "esbuild": "^0.19.10",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vitest": "^1.1.0"
  },
  "dependencies": {
    "@tanstack/react-table": "^8.11.2",
    "@tanstack/react-virtual": "^3.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zustand": "^4.4.7"
  }
}

